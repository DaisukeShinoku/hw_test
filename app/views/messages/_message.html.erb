<%= turbo_frame_tag message do %>
  <div id="<%= dom_id message %>">
    <p>
      <strong>Title:</strong>
      <%= message.title %>
    </p>

    <p>
      <strong>Content:</strong>
      <%= message.content %>
    </p>

    <p>
      <%= link_to 'Show', message %> |
      <%= link_to 'Edit', edit_message_path(message) %>
      <%= button_to 'Destroy', message, method: :delete %>
    </p>
  </div>
<% end %>